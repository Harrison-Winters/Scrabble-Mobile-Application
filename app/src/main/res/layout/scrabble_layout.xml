<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_gui_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/RightBoardGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintGuide_percent="0.8" />
    />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/LeftBoardGuideline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintGuide_percent="0.2" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/CurrentScoreLayout"
        app:layout_constraintEnd_toStartOf="@+id/LeftBoardGuideline"
        app:layout_constraintStart_toStartOf="@+id/CurrentScoreLayout"
        app:layout_constraintTop_toTopOf="@+id/CurrentScoreLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CurrentScoreTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Score"
                android:textAlignment="center"
                android:textSize="37sp" />

            <LinearLayout
                android:id="@+id/CurrentScoreLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/player0Score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/player1Score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/player2Score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/player3Score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="30sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/CurrentScoreLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/UserManualTitleTextView"
        app:layout_constraintEnd_toStartOf="@+id/LeftBoardGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <TextView
        android:id="@+id/UserManualTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="User Manual/Rules"
        android:textColor="#FF0000"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/UserManualScrollView"
        app:layout_constraintEnd_toStartOf="@+id/LeftBoardGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CurrentScoreLayout" />

    <ScrollView
        android:id="@+id/UserManualScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/LeftBoardGuideline"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserManualTitleTextView">

        <TextView
            android:id="@+id/userManualTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.Play should start by the first player combining their pieces at the center piece (White Circle) to create one word either across the board or down the board (Diagonal words are not allowed).\n\n2.When the player has completed a word on the board hit the check button (right side of the players hand) to check to see if the word is valid.\n\n3.If the word is valid the game will move on to the next player and add the appropriate points to the player's score.\n\n4.If the player wants to clear what they have placed the player can click the clear button (right side of their hand) to clear the board of what they have placed.\n\n5.If the player cannot create a word, they can tap on the bag icon to exchange pieces (This action will also skip the playerâ€™s turn).\n\n6.Tiles cannot be shifted after they are played and confirmed to be checked.\n\n7.After the first player has ended their first turn the next player(s) can combine the letters in their hand and on the board connected to the first players word to create one word either across the board or down the board (Diagonal words are not allowed).\n\n8.If a player plays all 7 of their tiles on one turn it is considered a â€œBINGO!â€ so the player receives a bonus 50 points.\n\n9.Premium letter spaces(Blue 2x or 3x):Letters placed on these spaces will double or triple the letters score .\n\n10.Premium word spaces(Red 2x or 3x): Words placed on these spaces the score for the entire word is doubled or tripled.\n\n11.These premium spaces only count on the turn in which they are played.\n\n12.The game ends when all letters have been taken from the bag and one player has played their last tile.\n\n13.The player with the highest score wins."
            android:textColor="#3F51B5"
            android:textSize="16sp" />
    </ScrollView>

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/RightBoardGuideline"
        app:layout_constraintStart_toStartOf="@+id/LeftBoardGuideline" />

    <com.example.scrabblegameframework.ScrabbleFramework.GameSurfaceView
        android:id="@+id/gameSurfaceView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/scrabble_board"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toStartOf="@+id/RightBoardGuideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/LeftBoardGuideline"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:outlineProvider="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/RightBoardGuideline"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/gameSurfaceView">

        <Button
            android:id="@+id/ResetButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#03A9F4"
            android:text="ðŸ”„"
            android:textSize="20sp" />

        <Button
            android:id="@+id/Tile0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:backgroundTint="#D6A833"
            android:outlineProvider="none"
            android:text="A"
            app:cornerRadius="0sp" />

        <Button
            android:id="@+id/Tile1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:backgroundTint="#D6A833"
            android:text="B"
            app:cornerRadius="0sp" />

        <Button
            android:id="@+id/Tile2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:backgroundTint="#D6A833"
            android:text="C"
            app:cornerRadius="0sp" />

        <Button
            android:id="@+id/Tile3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:backgroundTint="#D6A833"
            android:text="D"
            app:cornerRadius="0sp" />

        <Button
            android:id="@+id/Tile4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:backgroundTint="#D6A833"
            android:text="E"
            app:cornerRadius="0sp" />

        <Button
            android:id="@+id/Tile5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:backgroundTint="#D6A833"
            android:text="F"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/Tile6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:backgroundTint="#D6A833"
            android:text="G"
            app:cornerRadius="0sp" />

        <Button
            android:id="@+id/SubmitButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#17A512"
            android:text="âœ”"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/TimerLinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/RightBoardGuideline"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/scrabbleBagButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:src="@drawable/scrabble_bag" />

        <TextView
            android:id="@+id/scrabbleScoreChartTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="Score Chart"
            android:textAlignment="center"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/scrabbleScoreChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:src="@drawable/scrabble_point_chart" />

        <ScrollView
            android:id="@+id/letterDistributionScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <ImageView
                android:id="@+id/letterDistributionImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/letterdistribution" />
        </ScrollView>

    </LinearLayout>
    <![CDATA[



















    />










]]>
</androidx.constraintlayout.widget.ConstraintLayout>